{
  "name": "monorepo-todo-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate":"cd packages/db && bunx prisma generate && cd ../..",
    "start:web": "cd apps/web && bun run start",
    "start:backend": "cd apps/backend && bun run src/index.ts",
    "start:websocket": "cd apps/websocket && bun run src/index.ts"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
